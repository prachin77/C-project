int profile(){
	printf("\n");
	printf("YOUR PROFILE IS HERE\n");
	printf("\n");
	printf("weight between 65-85 is normal\n\n");
	int w;
	printf("ENTER YOUR WEIGHT:");
	scanf("%d\n",&w);
	if(w>=65 && w<=85){
		printf("you are over weighted \n pls loose your weight!\n");
	}
	else if(w<65){
		printf("your weight is normal\n");
	}

}
int main() {
	printf("\n");
    printf("                                                HELLO! WELCOME TO MY WEBSITE           \n");
    printf("========================================================================================================================\n");
    printf("\n");
    char uname[100]="admin";
    int pass=123;
    
    char uid[10];
    int pwd;int i;
    
    printf("ENTER YOUR USER USERNAME:");
    scanf("%s",&uid);
    printf("ENTER YOUR PASSWORD:");
    scanf("%d",&pwd);

	if((pwd!=pass)){
		printf("*****************************************   YOU CAN TRY YOUR LUCK FOR 2 TIMES ONLY   **********************************\n");
		for(i=1;i<3;i++){
//			printf("ENTER YOUR USER USERNAME:");
//    		scanf("%s",&uid);
			printf("ENTER YOUR PASSWORD:");
			scanf("%d",&pwd);
			if(pwd==pass){
				printf("your 'password'  and user id is correct\n");
				break;			
			}
		}

	}
//	printf("YOU CAN WIAT FOR 15 SECONDS\n");
//	#It looks like there is an error on the line if(strcmp(uname,uid)&&(pwd==pass)). 
//	The strcmp() function returns 0 if the two strings are equal, but the && operator
//	will only evaluate the second condition if the first condition is true. This means that if 
//	the two strings are equal, the second condition will not be checked and the code inside 
//	the if block will not be executed.so we use "||" operator.
	
	if(strcmp(uname,uid)==0||(pwd==pass)){
    	printf("                                                 YOUR LOGIN IS SUCCESSFULL                                      \n");
    	homepage();
	}
    return 0;
}

